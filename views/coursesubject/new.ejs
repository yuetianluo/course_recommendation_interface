<div class="mini-banner auto">
	<div class="container">
		<h2>Add new course subject</h2>
	</div>
</div>

<div class="sub-banner">
	<div class="container">
		<h2 class="form-signin-heading">you can add new course subject here</h2>

    <% if (messages && messages['error'].length > 0) { %>
      <div class="alert alert-danger">
      <% messages['error'].forEach(function(message) { %>
        <%= message %>
        <br>
      <% }); %>
      </div>
      <br>
    <% } %>
    <% if (messages && messages['warning'].length > 0) { %>
      <div class="alert alert-warning">
      <% messages['warning'].forEach(function(message) { %>
        <%= message %>
        <br>
      <% }); %>
      </div>
      <br>
    <% } %>
	</div>
</div>

<div class="container">
	<form action="/coursesubject/create" method="POST" class="form-signin">
		Please enter the name of the course subject
    <br>
    <br><br>
		<label>Course Subject: </label><input type="text" class="form-control" placeholder="course subject name" name="coursesubjectName" tabindex="1">
    <br>
      <select name="departmentid" class="department-list form-control" id="departmentlist" >
    <option></option>
      <% _.each(departments, function(department) { %>
      <option value="<%=department.id%>"><%=department.departmentName%></option>
      <%})%>
    </select>
    <br>
    <br>
    <br>
		<input type="submit" class="btn btn-md btn-primary btn-block" value="Create" tabindex="1">
		<input type="hidden" name="_csrf" value="<%= _csrf %>" />
	</form>
</div>


<script type="text/javascript">
  $(document).ready(function() {
  $("#departmentlist").select2({
    placeholder:'Please choose a department for this course subject'
  });
});
</script>